<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode"
    tools:context=".ui.about.about">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="267dp"
        android:layout_height="233dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/about_pic"
        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="250dp"
    android:layout_gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="E-waste Recycling App"
        android:textColor="@color/solid_white"
        android:textSize="14sp"
       android:layout_marginTop="0dp"

        />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By Mahendra M"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="40dp"
        android:textColor="@color/solid_white"
        android:textSize="14sp"
      />


    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How It Works ? "
        android:layout_marginVertical="120dp"
        android:textColor="@color/solid_white"
        android:textSize="14sp"
      />

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="160dp"
        android:text="1.   Click On Book A PickUp"
        android:textColor="@color/solid_white"
        android:textSize="14sp"
       />
    <TextView

        android:id="@+id/textView7"
        android:layout_width="372dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="210dp"
        android:text="2.   Upload the images of the product you want to recycle"
        android:textColor="@color/solid_white"
        android:textSize="14sp"

       />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginVertical="270dp"
        android:text="3.   Add the Address or Use the existing Address "
        android:textColor="@color/solid_white"
        android:textSize="14sp"
        />

    <TextView

        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginVertical="330dp"
        android:text="4.   Click On the Request PickUp.. Button "
        android:textColor="@color/solid_white"
        android:textSize="14sp"
       />

    <TextView

        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="390dp"
        android:layout_marginLeft="10dp"
        android:text="5.   Our Team will Contact You Soon  "
        android:textColor="@color/solid_white"
        android:textSize="14sp"
        />

</RelativeLayout>

</FrameLayout>