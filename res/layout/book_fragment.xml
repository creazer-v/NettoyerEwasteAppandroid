<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" 
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkmode"
    tools:context=".ui.bookapickup.book">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_marginTop="140dp"
    android:layout_gravity="center_horizontal">
    <ImageView
        android:id="@+id/image1"
        android:layout_width="80dp"
        android:layout_height="80dp"
       android:layout_gravity="left"
        android:background="@drawable/frame"
         />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:background="@drawable/frame"
        />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:background="@drawable/frame"
        app:layout_constraintEnd_toStartOf="@+id/image1"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>


    <Button
        android:id="@+id/request_pickup"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"

        android:layout_gravity="bottom|center_horizontal"
        android:background="@drawable/squircle_button"
        android:text="@string/request_pickup"
        android:textColor="@color/solid_white"

        />



    <Spinner
    android:id="@+id/list_of_products"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:layout_gravity="center_horizontal"
   android:foregroundTint="@color/litegreen"

   android:backgroundTint="@color/litegreen"
    />







    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/product_name"
            android:layout_width="300dp"
            android:layout_height="55dp"

            android:layout_gravity="center_horizontal"
android:maxLength="255"

            android:backgroundTint="@color/litegreen"
            android:drawablePadding="10dp"
            android:drawableTint="@color/litegreen"

            android:ems="10"
            android:hint="@string/enter_product_name"
            android:textColor="@color/solid_white"
            android:textColorHint="@color/solid_white"

            android:textSize="12sp" />


        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="306dp"
            android:layout_height="55dp"

            android:layout_gravity="center_horizontal"
android:layout_marginTop="40dp"
            android:backgroundTint="@color/litegreen"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/litegreen"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColor="@color/solid_white"
            android:textColorHint="@color/solid_white"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/editTextPhone2"
            android:layout_width="300dp"
            android:layout_height="70dp"

android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/litegreen"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/litegreen"
            android:ems="10"
            android:hint="@string/address"
            android:textColor="@color/solid_white"
            android:textColorHint="@color/solid_white"
            android:textSize="12sp"
            android:maxLength="255"
            />

        <EditText
            android:id="@+id/product_description"
            android:layout_width="300dp"
            android:layout_height="70dp"
android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"

            android:backgroundTint="@color/litegreen"
            android:drawablePadding="10dp"
            android:maxLength="255"
            android:hint="@string/product_description"
            android:textColor="@color/solid_white"
            android:textColorHint="@color/solid_white"
            android:textSize="12sp" />

    </LinearLayout>





    <TextView
        android:id="@+id/textw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        />

    <TextView
        android:id="@+id/textViewview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewmsg"
        android:textSize="10dp"
        android:visibility="invisible"/>

</FrameLayout>